<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ServletUsuario</servlet-name>
        <servlet-class>controlador.ServletUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletUniforme</servlet-name>
        <servlet-class>controlador.ServletUniforme</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletEditarUniforme</servlet-name>
        <servlet-class>controlador.ServletEditarUniforme</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletMensaje</servlet-name>
        <servlet-class>controlador.ServletMensaje</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletCatalogo</servlet-name>
        <servlet-class>controlador.ServletCatalogo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletInstitucion</servlet-name>
        <servlet-class>controlador.ServletInstitucion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletEditarInstitucion</servlet-name>
        <servlet-class>controlador.ServletEditarInstitucion</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletUsuario</servlet-name>
        <url-pattern>/iniciar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletUniforme</servlet-name>
        <url-pattern>/CrearUniforme</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletEditarUniforme</servlet-name>
        <url-pattern>/Editar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletMensaje</servlet-name>
        <url-pattern>/enviarMensaje</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletCatalogo</servlet-name>
        <url-pattern>/Catalogo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletInstitucion</servlet-name>
        <url-pattern>/Institucion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletEditarInstitucion</servlet-name>
        <url-pattern>/EditarInstitucion</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
